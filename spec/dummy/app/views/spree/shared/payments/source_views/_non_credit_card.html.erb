<fieldset data-hook="credit_card">
  <div>
    <h3><%= payment.try(:payment_method).try(:class).to_s.demodulize.titleize %>
      <label class="btn circle pull-right payment_status <%= @payment.state %>">
        <%= Spree.t(payment.state, scope: :payment_states, default: @payment.state).to_s.titleize %>
      </label>
    </h3>
  </div>
  <div class='row margin-top-10 margin-bottom-10'>
    <div class='col-xs-4'>
      Transaction Number:
    </div>
    <div class='col-xs-8'>
      <%= payment.transaction_id %>
    </div>
  </div>
  <div class='row margin-bottom-20'>
    <div class='col-xs-4'>
      Memo:
    </div>
    <div class='col-xs-8'>
      <%= payment.memo %>
    </div>
  </div>
</div>
