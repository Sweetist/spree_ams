<table class="row footer">
  <tr>
    <td class="footer-note left seven sub-columns">
      <% if @order %>
        <% if @order.try(:order_type) == "purchase" %>
          <% vendor = @order.customer %>
        <% else %>
          <% vendor = @order.vendor %>
        <% end %>
        <%= render partial: 'spree/shared/vendor_info', locals: {vendor: vendor} %>
      <% elsif @invoice %>
        <% vendor = @invoice.vendor %>
        <%= render partial: 'spree/shared/vendor_info', locals: {vendor: vendor} %>
      <% elsif @contact %>
        <% vendor = @vendor %>
      <% elsif @import %>
        <% company = @import.company %>
        <%= render partial: 'spree/shared/vendor_info', locals: {vendor: company} %>
       <% elsif @vendor %>
        <% vendor = @vendor %>
        <%= render partial: 'spree/shared/vendor_info', locals: {vendor: vendor} %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td style = "height: 10px;">
    </td>
  </tr>
  <tr>
    <td class="wrapper last">
      <table class="twelve columns">
      <!--
        <tr>
          <td align="center">
            <center>
              <p style="text-align:center;"><a href="/faq">FAQ</a> | <a href="#">Get Sweet</a> | <a href="/legal-privacy#">Legal & Terms</a></p>
            </center>
          </td>
          <td class="expander"></td>
        </tr>
        -->
				<tr>
					<td class="footer-note">
            <% if @mail_type == "order" && @order %>
              <% if @order.try(:order_type) == "purchase" %>
                For any questions about this order, please contact <%= @order.customer.name %> at <a href=<%= "mailto:#{@order.account.customer.email}?subject=Questions%20about%20order%20#{@order.number}" %>><%= @order.account.customer.email %></a>.
              <% else %>
                For any questions about your order, please contact us at <a href=<%= "mailto:#{@order.vendor.email}" %>><%= @order.vendor.email %></a>.
              <% end %>
            <% elsif (@mail_type == "order" || @mail_type == "invoice") && @invoice %>
  						For any questions about your invoice, please contact us at <a href=<%= "mailto:#{@invoice.vendor.email}" %>><%= @invoice.vendor.email %></a>.
            <% elsif @mail_type == "contact" %>
              For any questions about your account, please contact us at <a href=<%= "mailto:#{@vendor.email}" %>><%= @vendor.email %></a>.
            <% elsif @mail_type == "vendor" %>
  						For any issues with Sweet, please contact our support team at <a href=<%= "mailto:help@onsweet.co" %>>help@onsweet.co</a>.
            <% else %>
  						<a href="www.getsweet.com">www.getsweet.com</a>
            <% end %>
					</td>
				</tr>
      </table>

    </td>
  </tr>
</table>
