<% content_for :page_title do %>
  <%= link_to "Companies", admin_companies_path %> /
  <%= @company.name %>
<% end %>

<% content_for :sidebar do %>
  <ul class="nav nav-pills nav-stacked" data-hook="admin_product_tabs">
    <%= content_tag :li, class: ('active' if current == :details) do %>
      <%= link_to_with_icon 'edit', Spree.t(:details), edit_admin_company_url(@company) %>
    <% end if can?(:admin, Spree::Company) %>
    <%= content_tag :li, class: ('active' if current == :images) do %>
      <%= link_to_with_icon 'picture', Spree.t(:images), admin_company_company_images_url(@company) %>
    <% end if can?(:admin, Spree::CompanyImage) %>
  </ul>
<% end %>
