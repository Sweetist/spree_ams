<div data-hook="admin_payment_term_form_fields">
  <%= f.field_container :name, class: ['form-group'] do %>
    <%= f.label :name, Spree.t(:name) %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.error_message_on :name %>
  <% end %>

  <%= f.field_container :description, class: ['form-group'] do %>
    <%= f.label :description, Spree.t(:payment_description) %>
    <%= f.text_area :description, class: 'form-control' %>
  <% end %>

  <%= f.field_container :num_days, class: ['form-group'] do %>
    <%= f.label :num_days, Spree.t(:payment_days) %><br>
    <%= f.text_field :num_days, class: 'form-control' %>
  <% end %>

  <%= f.field_container :pay_before_submit, class: ['form-group'] do %>
    <%= f.label :pay_before_submit, 'Payment due before submitting order' %><br>
    <%= f.check_box :pay_before_submit, class: 'form-control' %>
  <% end %>



</div>
