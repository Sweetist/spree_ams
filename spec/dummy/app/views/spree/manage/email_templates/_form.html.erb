<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :subject, class: 'control-label' %>
      <%= f.text_field :subject, class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :from, class: 'control-label' %>
      <%= f.text_field :from, class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :cc, class: 'control-label' %>
      <%= f.text_field :cc, class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :bcc, class: 'control-label' %>
      <%= f.text_field :bcc, class: 'form-control' %>
    </div>
  </div>
  <div class="col-md-12">
    <div class="form-group">
      <%= f.label :body, class: 'control-label' %>
      <%= f.cktext_area :body, input_html: { rows: 10, ckeditor: { toolbar: 'Full' }}  %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= link_to "Liquid variables for related objects are supported", "http://support.getsweet.com/core-features/outgoing-communication-variables-reference", target: :_blank %>
    </div>
  </div>
  <% if @attach_pdf_option_exists %>
    <div class="col-md-6">
      <div class="form-group">
        <ul class="list-unstyled" id="send_approved_email_invoice_id">
          <li class="attach">
            <%= check_box :template, :attach_pdf, :checked => @attach_pdf, class: 'make-switch', "data-size" =>'mini',"data-on-color" => "success", "data-off-color" => "default", "data-off-text" => "No", "data-on-text" => "Yes", id: "invoice_switch_state"%>
            <%= label :attach_pdf, 'Attach Invoice', class: 'margin-left-20'%>
            <i class="icon-vis fa fa-file-pdf-o" id="invoice_icon"></i>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
</div>
