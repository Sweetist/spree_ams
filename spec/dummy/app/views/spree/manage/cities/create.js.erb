$('#zone_city_ids').append($('<option>', {value: '<%= @city.id %>', text: '<%= @city.state_and_city %>'}));
$('#city-modal').modal('hide');
$('#alert').html('<div class="alert alert-success alert-auto-dissapear"><%= flash[:success] %></div>');
$('.modal-content', '#city-modal').empty();

setTimeout(function() {
  $(".alert-auto-dissapear").fadeOut(1500);
},2000);

var selectedCities = $("#zone_city_ids").select2("val") || [];
$("#zone_city_ids").select2("val", selectedCities.concat("<%= @city.id %>"));
