<div id="adjustment-fields">
  <% if flash[:errors] %>
    <ul class='errors'>
      <% flash[:errors].each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <label class="amount">
      Amount <span>must include ( - ) if intended to be subtracted from the order</span>
    </label>
    <%= f.text_field :amount, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :label, "Reason", class: "control-label" %>
    <%= f.text_field :label, class: "form-control" %>
  </div>
</div>
