<% if @contact.persisted? %>
  $('#alert').html("<div class='alert alert-success alert-auto-dissapear'><%= flash[:success] %></div>");
  $("div#contacts_tab").html("<%= escape_javascript(render(partial: 'spree/manage/accounts/contacts_table')) %>");

  $("div#contact_form").html("<%= escape_javascript(render(partial: 'spree/manage/accounts/contact_form')) %>");
  $("div#contact_form").find("input[type=text], textarea").val("");
  $("#contact_account_ids").select2({width: '100%'});
  $('#contact_new').modal('hide');

  setTimeout(function() {
   $(".alert-auto-dissapear").fadeOut(1500);
  },2000);
<% else %>

  $("#contact_new div#alert").html("<%= escape_javascript(render(partial: 'spree/shared/errors')) %>");

<% end %>
