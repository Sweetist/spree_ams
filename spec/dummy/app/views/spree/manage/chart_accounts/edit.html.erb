<%= content_for :head_title do %>
  Chart of Accounts
<% end %>

<%= content_for :page_title do %>
  Edit Account
<% end %>

<%= content_for :page_bar do %>
  <ul class="page-breadcrumb">
    <li>
      <%= link_to "Home", manage_path %>
      <i class="fa fa-circle"></i>
    </li>
		<li>
      <%= link_to "Chart of Accounts", manage_chart_accounts_path %>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      Edit Account
    </li>
  </ul>
	<div class="page-toolbar">
    <div class="btn-group pull-right">
      <%= link_to 'Back to Chart of Accounts', manage_chart_accounts_path, class:'btn btn-sm green' %>
    </div>
  </div>
<% end %>

<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <span class="caption-subject font-blue-madison bold uppercase">
        Edit Account
      </span>
    </div>
  </div>
  <div class="portlet-body form">
    <%= form_for @account, url: manage_chart_account_path(@account.id), method: "put" do |f| %>
      <div class="form-body">
        <%= render partial: 'form', locals: {f:f} %>
      </div>
      <div class="form-actions">
        <div class="pull-right">
          <%= link_to manage_chart_accounts_path, class: "btn btn-default" do %>
            <i class='fa fa-times'></i> Cancel
          <% end %>
          <button class="btn btn-primary"><i class='fa fa-check'></i> Update</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
