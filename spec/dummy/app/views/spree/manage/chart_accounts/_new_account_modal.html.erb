<div class="modal fade" id="new-chart-account-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="portlet light" style='margin-bottom:0px;'>
        <div class="portlet-title">
          <div class="caption">
            <span class="caption-subject font-blue-madison bold uppercase">
              New Account
            </span>
          </div>
          <div class="actions">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
          </div>
        </div>
        <div class="portlet-body form">
          <div id='modal-errors'></div>

          <%= form_for :chart_account, url: manage_chart_accounts_path, method: "post", format: :js, remote: true do |f| %>
            <div class="form-body">
              <%= render partial: 'spree/manage/chart_accounts/form', locals: {f:f} %>
            </div>
            <div class="form-actions" style='margin-bottom:0px;'>
              <div class="pull-right">
                <%= link_to manage_chart_accounts_path, class: "btn btn-default",'data-dismiss'=>"modal", 'aria-hidden'=>"true" do %>
                  <i class='fa fa-times'></i> Cancel
                <% end %>
                <button class="btn btn-primary">
                  <i class='fa fa-check'></i> Save
                </button>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
