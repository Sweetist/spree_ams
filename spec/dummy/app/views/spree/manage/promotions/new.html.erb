<%= content_for :head_title do %>
  Pricing Adjustments
<% end %>

<%= content_for :page_title do %>
  Pricing Adjustments
<% end %>
<%= content_for :page_bar do %>
  <ul class="page-breadcrumb">
    <li>
      <%= link_to "Home", manage_path %>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      <%= link_to "Pricing Adjustments", manage_promotions_path %>
    </li>
  </ul>
  <div class="page-toolbar">
    <div class="btn-group pull-right">
			<%= link_to "New Pricing Adjustment", new_manage_promotion_path, class: "btn green" %>
    </div>
  </div>
<% end %>

<div class='row'>
  <div class="portlet light">
    <div class="portlet-title">
      <div class="caption">
        <span class="caption-subject font-blue-madison bold uppercase">
          Pricing Adjustments
        </span>
      </div>
    </div>

    <div class="portlet-body form">
        <!-- BEGIN FORM-->
      <%= form_for [:manage, @promotion], html: {id: "promotions-form", class: "horizontal-form"} do |f| %>
        <div class="form-body">
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :name, class: "control-label" %>
                <%= f.text_field :name, class: 'form-control' %>
                <span id='promotion_name_error'></span>
              </div>
            </div>
          </div>
          <!-- <h3 class="form-section">General Fields</h3> -->

          <!--/row-->
          <div class="row">

            <div class="col-md-6">
              <h3 class="form-section" id='promotion-rules'>Rules</h3>
              <%= render :partial => 'rules', :locals => { :f => f } %>
            </div>
            <div class="col-md-6" id='promotion-actions'>
              <h3 class="form-section">Actions</h3>
              <%= render :partial => 'actions', :locals => { :f => f } %>
            </div>
          </div>
          <!--/row-->
          <hr>
          <%= render :partial => 'form', :locals => { :f => f } %>
        </div>
        <div class="form-actions right">
          <button class="btn btn-primary"><i class="fa fa-check"></i> Save</button>
          <%= link_to "Cancel", manage_promotions_path, class: "btn btn-default" %>
        </div>
      <% end %>
        <!-- END FORM-->
    </div>
  </div>
</div>
