<% if @price_list && flash[:success].present? %>
  $("#price_list_<%= @price_list.id %>").remove();
  $('#alert').html("<div class='alert alert-success alert-auto-dissapear'><%= flash[:success] %></div>");
<% else %>
  $('#alert').html("<div class='alert alert-danger alert-auto-dissapear'><%= flash[:error] %></div>");
<% end %>

setTimeout(function() {
  $(".alert-auto-dissapear").fadeOut(1500);
},2000);
