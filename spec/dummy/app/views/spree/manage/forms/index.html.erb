<%= content_for :head_title do %>
  Forms
<% end %>

<%= content_for :page_bar do %>
  <ul class="page-breadcrumb">
    <li>
      <%= link_to "Home", manage_path %>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      <span>Forms</span>
    </li>
  </ul>
  <div class="page-toolbar">
    <%= link_to new_manage_form_path, class: "btn green pull-right" do%>
      <i class="fa fa-plus"></i>
      <% if Spree::Form::FORM_TYPES.count > 1 %>
        New Form
      <% else %>
        New Request Account Form
      <% end %>
    <% end %>
  </div>
<% end %>
<div class="table-scrollable">
  <table class="table table-striped table-hover" id="sample_1">
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Title
        </th>
        <th>
          Type
        </th>
        <th>
          Active
        </th>
        <th>

        </th>
      </tr>
    </thead>
    <tbody>
      <% @forms.each do |form| %>
        <% url = edit_manage_form_path(form) %>
        <tr>
          <td><%= link_to form.name, url %></td>
          <td><%= link_to form.title.to_s, url %></td>
          <td><%= link_to Spree.t("forms.form_types.#{form.form_type}"), url %></td>
          <td><%= link_to form.active ? Spree.t(:say_yes) : Spree.t(:say_no), url %></td>
          <td class='actions-2'>
            <%= link_to manage_form_path(form), class: 'btn blue-chambray btn-sm pull-right' do %>
              <i class='fa fa-search'></i>
            <% end %>
            <%= link_to url, class: 'btn btn-primary btn-sm pull-right' do %>
              <i class='fa fa-pencil'></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
