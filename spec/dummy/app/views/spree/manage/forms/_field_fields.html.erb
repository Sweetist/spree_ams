<div class='row nested-fields'>
  <div class='col-sm-11 col-xs-9'>
    <div class='col-sm-4'>
      <div class='form-group'>
        <%= f.label :label, Spree.t('form_field.label.label'), class: 'control-label' %>
        <%= f.text_field :label, class: 'form-control field-label' %>
      </div>
    </div>
    <div class='col-sm-4'>
      <div class='form-group'>
        <%= f.label :field_type, Spree.t('form_field.field_type.label'), class: 'control-label' %>
        <%= f.select :field_type,
          options_for_select(
            Spree::FormField::FIELD_TYPES.map{|type| [Spree.t("form_field.field_types.#{type}"), type]},
            selected: f.object.try(:field_type)
          ), {include_blank: false}, class: 'form-control' %>
      </div>
    </div>

    <div class='col-sm-2'>
      <div class='form-group'>
        <%= f.label :num_columns, Spree.t('form_field.num_columns.label'), class: 'control-label' %><br>
        <%= f.select :num_columns, options_for_select([[1,1],[2,2],[3,3]], selected: f.object.try(:num_columns)),
          {include_blank: false}, class: 'form-control field-num-columns' %>
      </div>
    </div>

    <div class='col-sm-2'>
      <div class='form-group'>
        <%= f.label :required, Spree.t('form_field.required.label'), class: 'control-label' %><br>
        <%= f.check_box :required %>
      </div>
    </div>
  </div>

  <div class='col-sm-1 col-xs-3'>
    <%#= f.hidden_field :_destroy %>
    <%= link_to_remove_association f, class: 'btn btn-xs red delete-input-row-btn' do %>
      <i class="fa fa-times"></i>
    <% end %>
  </div>
  <div class='col-xs-12 visible-xs'>
    <hr>
  </div>
</div>
