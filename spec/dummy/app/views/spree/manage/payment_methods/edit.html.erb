<%= content_for :head_title do %>
  Payment Methods
<% end %>

<%= content_for :page_title do %>
  Edit Payment Method
<% end %>
<%= content_for :page_bar do %>
  <ul class="page-breadcrumb">
    <li>
      <%= link_to "Home", manage_path %>
      <i class="fa fa-circle"></i>
    </li>
		<li>
      <%= link_to "Payment Methods", manage_payment_methods_path %>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      <span>Edit Payment Method</span>
    </li>
  </ul>
	<div class="page-toolbar">
    <div class="btn-group pull-right">
      <%= link_to 'Back to Payment Methods', manage_payment_methods_path, class:'btn green' %>
    </div>
  </div>
<% end %>

<div class='row'>
  <div class="portlet light">
    <div class="portlet-title">
      <div class="caption">
        <span class="caption-subject font-blue-madison bold uppercase">
          Edit Payment Method: <%= @payment_method.name %>
        </span>
      </div>
    </div>
    <div class="portlet-body form">

      <%= form_for @payment_method, url: manage_payment_method_path(@payment_method) do |f| %>
        <div class="form-body">
          <%= render partial: 'form', locals: {f:f} %>
        </div>
        <div class="form-actions">
          <div class="pull-right">
            <%= link_to manage_payment_methods_path, class: 'btn btn-default' do %>
              <i class='fa fa-times'></i> Cancel
            <% end %>
            <button class="btn btn-primary">
              <i class='fa fa-check'></i> <%= Spree.t(:update) %>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
