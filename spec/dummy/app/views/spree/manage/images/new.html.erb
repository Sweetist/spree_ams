<%= content_for :head_title do %>
  <%= @product.name %>
<% end %>

<%= content_for :page_title do %>
<%= @product.name %>
<% end %>

<%= content_for :page_bar do %>
  <ul class="page-breadcrumb">
    <li>
      <%= link_to "Home", manage_path %>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      <%= link_to "Products", manage_products_path %>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      <%= link_to @product.name,  edit_manage_product_url(@product) %>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      <%= link_to "Images",  manage_product_images_url(@product) %>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      New
    </li>
  </ul>

  <div class="page-toolbar">
    <div class="btn-group pull-right">
      <%= link_to "Back to Product",  edit_manage_product_url(@product), class: "btn btn-success btn-sm" %>
    </div>
  </div>

<% end %>

<div class="portlet box blue-hoki">

  <div class="portlet-title">
    <div class="caption">
      Upload New Image
    </div>
  </div>

  <div class="portlet-body form">
    <%= form_for [:manage, @product, @image], :html => { :multipart => true } do |f| %>
      <div class="form-body">
        <%= render :partial => 'form', :locals => { :f => f } %>
      </div>

      <div class="form-actions right">
        <%= link_to_with_icon 'remove', Spree.t('actions.cancel'), manage_product_images_url(@product), :id => 'cancel_link', :class => 'btn btn-default' %>
        <%= button Spree.t('actions.update'), 'refresh', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>



<%#= javascript_include_tag 'spree/backend/images/new.js' %>
