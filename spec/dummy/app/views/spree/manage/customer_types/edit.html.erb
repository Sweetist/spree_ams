<%= content_for :head_title do %>
  Edit Customer Type
<% end %>

<%= content_for :page_title do %>
	<span class="order-id">
		Edit Customer Type
	</span>
<% end %>
<%= content_for :page_bar do %>
  <ul class="page-breadcrumb">
    <li>
      <%= link_to "Home", manage_path %>
      <i class="fa fa-circle"></i>
    </li>
		<li>
      <%= link_to 'Customer Types', manage_customer_types_path %>
    </li>
  </ul>
	<div class="page-toolbar">
    <div class="btn-group pull-right">
      <%= link_to "Back to All Customer Types", manage_customer_types_path, class: 'btn green btn-sm' %>
    </div>
  </div>
<% end %>

<div class='content'>
  <div class="portlet box light">
    <div class="portlet-title">
      <div class="caption">

      </div>
    </div>
    <div class="portlet-body form">
      <%= form_for [:manage, @customer_type] do |f| %>
        <div class="form-body">
          <%= render partial: 'form', locals: {f: f} %>
        </div>
        <div class="form-actions">
          <%= link_to manage_customer_type_path(@customer_type.id), data:{:confirm => "Are you sure you want to delete this customer type?"}, :method => :delete, class: "btn red btn-default" do %>
            <i class="fa fa-times"></i> Delete Customer Type
          <% end %>
          <div class='pull-right'>
            <button class="btn btn-primary"><i class="fa fa-check"></i> <%= Spree.t(:update) %></button>
            <%= link_to Spree.t(:Cancel), manage_customer_types_path, class: "btn btn-default" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
