<div class="modal fade bs-modal confirmation-modal" id="<%= modal_id %>" tabindex="-1">
  <div class="modal-dialog">

    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title"><%= title %></h4>
      </div>
      <div class='modal-body'>
        <% if defined?(:warning_message) && warning_message.present? %>
          <div class='help-block-italic margin-bottom-20'>
            <strong>WARNING:</strong>
            <%= warning_message %>
          </div>
        <% end %>
        <div class='form-group'>
          <label>Type your email <strong><%= current_spree_user.email %></strong> to confirm</label>
          <input type='email' name='confirm_with_email' class='form-control confirm_with_email'>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn dark btn-outline" data-dismiss="modal"><%= Spree.t(:Cancel) %></button>
        <button type="button" class='btn red confirm-by-email'>Confirm</button>
      </div>
    </div>
  </div>
</div>
