<div class="panel-heading">
  <h4 class="panel-title">
    <a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion1" href="#parent_taxon_<%= taxon.id %>">
      <% if taxon.children.present? %><i class="fa fa-chevron-down" aria-hidden="true"></i><% end %>
      <%= taxon.name %>
    </a>
    <% if @user_can_edit_taxons %>
      <%= link_to manage_taxon_path(taxon.id), data:{:confirm => "Are you sure you want to delete this category?"}, :method => :delete, class: "btn red btn-sm pull-right", remote: true do %>
        <i class='fa fa-times' aria-hidden='true'></i>
      <% end %>
      <%= link_to raw("<i class='fa fa-pencil' aria-hidden='true'></i>"), edit_manage_taxon_path(taxon.id), class: 'btn btn-primary btn-sm pull-right' %>
      <%= link_to raw("<i class='fa fa-plus' aria-hidden='true'></i>"), new_manage_taxon_path(parent_id: taxon.id), class: 'btn btn-primary btn-sm pull-right' %>
    <% end %>
  </h4>
</div>
