<h4 class='form-section'>Pdf Purchase Order Settings</h4>
<div class='row'>
  <div class='col-sm-4'>
    <div class="form-group">
      <%= f.label :po_pdf_price, 'Show Prices', class: 'control-label' %><br />
      <%= f.check_box :po_pdf_price, class: 'make-switch', data: { size: 'mini' } %>
    </div>
  </div>
  <div class='col-sm-4'>
    <div class="form-group">
      <%= f.label :po_pdf_include_unit_weight, 'Unit Weights', class: "control-label" %><br>
      <%= f.check_box :po_pdf_include_unit_weight, class: 'make-switch', 'data-size' => 'mini' %>
    </div>
  </div>
  <div class='col-sm-4'>
    <div class="form-group">
      <%= f.label :po_pdf_include_total_weight, 'Show Aggregate Weights', class: "control-label" %><br>
      <%= f.check_box :po_pdf_include_total_weight, class: 'make-switch', 'data-size' => 'mini' %>
    </div>
  </div>
</div>
<div class='row'>
  <div class='col-sm-6'>
    <div class="form-group">
      <%= f.label :po_footer_left, 'Footer Left', class: "control-label" %><br />
      <%= f.text_area :po_footer_left, class: "form-control"  %>
    </div>
  </div>

  <div class='col-sm-6'>
    <div class="form-group">
      <%= f.label :po_footer_right, 'Footer Right', class: "control-label" %><br />
      <%= f.text_area :po_footer_right, class: "form-control"  %>
    </div>
  </div>
</div>
