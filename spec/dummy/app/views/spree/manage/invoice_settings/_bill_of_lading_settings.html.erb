<h4 class='form-section'>Bill of Lading Settings</h4>
<div class='row'>
  <div class='col-xs-6'>
    <div class="form-group">
      <%= f.label :bol_terms_and_condtions1, "#{Spree.t('pdf_settings.bol.terms_and_conditions.label')} 1", class: "control-label" %></br>
      <%= f.text_area :bol_terms_and_condtions1, class: 'form-control' %>
    </div>
  </div>
  <div class='col-xs-6'>
    <div class="form-group">
      <%= f.label :bol_terms_and_condtions2, "#{Spree.t('pdf_settings.bol.terms_and_conditions.label')} 2", class: "control-label" %></br>
      <%= f.text_area :bol_terms_and_condtions2, class: 'form-control' %>
    </div>
  </div>
  <div class='col-xs-12'>
    <div class="form-group">
      <%= f.label :bol_terms_and_condtions3, "#{Spree.t('pdf_settings.bol.terms_and_conditions.label')} 3", class: "control-label" %></br>
      <%= f.text_area :bol_terms_and_condtions3, class: 'form-control' %>
    </div>
  </div>

  <div class='col-md-4 col-sm-6'>
    <div class="form-group">
      <%= f.label :bol_require_shipper_signature, Spree.t('pdf_settings.bol.req_shipper_signature.label'), class: "control-label" %><br />
      <%= f.check_box :bol_require_shipper_signature, class: 'make-switch', 'data-size' => 'mini' %>
    </div>
  </div>

  <div class='col-md-4 col-sm-6'>
    <div class="form-group">
      <%= f.label :bol_require_receiver_signature, Spree.t('pdf_settings.bol.req_receiver_signature.label'), class: "control-label" %><br />
      <%= f.check_box :bol_require_receiver_signature, class: 'make-switch', 'data-size' => 'mini' %>
    </div>
  </div>
</div>
