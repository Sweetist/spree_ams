<h4 class='form-section'>Pdf Invoice Settings</h4>
<div class='row'>
  <div class='col-sm-3 col-xs-6'>
    <div class="form-group">
      <%= f.label :use_footer, class: "control-label" %><br>
      <%= f.check_box :use_footer, class: 'make-switch', 'data-size' => 'mini' %>
    </div>
  </div>
  <div class='col-sm-3 col-xs-6'>
    <div class="form-group">
      <%= f.label :invoice_pdf_include_unit_weight, 'Unit Weights', class: "control-label" %><br>
      <%= f.check_box :invoice_pdf_include_unit_weight, class: 'make-switch', 'data-size' => 'mini' %>
    </div>
  </div>
  <div class='col-sm-3 col-xs-6'>
    <div class="form-group">
      <%= f.label :invoice_pdf_include_total_weight, 'Show Aggregate Weights', class: "control-label" %><br>
      <%= f.check_box :invoice_pdf_include_total_weight, class: 'make-switch', 'data-size' => 'mini' %>
    </div>
  </div>
  <div class='col-sm-3 col-xs-6'>
    <div class="form-group">
      <%= f.label :invoice_pdf_include_balance, 'Show Remaining Balance', class: "control-label" %><br>
      <%= f.check_box :invoice_pdf_include_balance, class: 'make-switch', 'data-size' => 'mini' %>
    </div>
  </div>
</div>
<div class='row'>
  <div class='col-sm-6'>
    <div class="form-group">
      <%= f.label :footer_left, 'Footer Left', class: "control-label" %><br />
      <%= f.text_area :footer_left, class: "form-control"  %>
    </div>
  </div>

  <div class='col-sm-6'>
    <div class="form-group">
      <%= f.label :footer_right, 'Footer Left', class: "control-label" %><br />
      <%= f.text_area :footer_right, class: "form-control"  %>
    </div>
  </div>

  <div class='col-sm-12'>
    <div class="form-group">
      <%= f.label :return_message, class: "control-label" %><br />
      <%= f.text_area :return_message, class: "form-control", placeholder: "" %>
    </div>
  </div>
</div>
