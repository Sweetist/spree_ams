<h4 class='form-section'>Purchase Order Settings</h4>

<div class='row'>
  <div class='col-sm-4'>
    <div class="form-group">
      <%= f.label :po_order_prefix, 'Purchase Order # Prefix', class: 'control-label' %>
      <%= f.text_field :po_order_prefix, value: f.object.po_order_prefix || 'PO', class: 'form-control' %>
    </div>
  </div>
  <div class='col-sm-4'>
    <div class="form-group">
      <%= f.label :po_order_next_number, 'Next Purchase Order Number', class: "control-label" %><br />
      <%= f.number_field :po_order_next_number, class: "form-control" %>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="form-group">
      <%= f.label :po_include_unit_weight, "Show Product Weight", class: 'control-label' %><br>
      <%= f.check_box :po_include_unit_weight, class: 'make-switch', 'data-size' => 'mini' %>
    </div>
  </div>
  <div class="col-sm-4">
    <div class="form-group">
      <%= f.label :po_include_total_weight, "Show Aggregate Weights", class: 'control-label' %><br>
      <%= f.check_box :po_include_total_weight, class: 'make-switch', 'data-size' => 'mini' %>
    </div>
  </div>
</div>
