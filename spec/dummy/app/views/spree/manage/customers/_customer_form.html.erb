  <div class="row">

    <% if edit %>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :name, raw("<span class='required'>*</span> Customer Company Name"), class: "control-label" %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group"> <!-- use class: "has-error to highlight field with error" -->
        <%= f.label :time_zone, raw("<span class='required'>*</span> Time Zone"), class: "control-label" %>
        <%= f.time_zone_select(:time_zone, ActiveSupport::TimeZone.us_zones, {include_blank: true}, {class: 'form-control'}) %>
        <!-- <span class="help-block"> This field has error. </span> -->
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :email, class: "control-label" %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>

    <% else %>
    <div class="col-md-6">
      <h4 class="form-section">Company info</h4>
      <div class="row static-info">
        <div class="col-xs-6 name">Customer Company Name:</div>
        <div class="col-xs-6 value"><%= @customer.name %></div>
      </div>
      <div class="row static-info">
        <div class="col-xs-6 name">Email:</div>
        <div class="col-xs-6 value"><%= @customer.email %></div>
      </div>
      <div class="row static-info">
        <div class="col-xs-6 name">Time Zone:</div>
        <div class="col-xs-6 value"><%= @customer.time_zone %></div>
      </div>
    </div>
    <% end %>
  </div>
