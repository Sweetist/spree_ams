<%= content_for :head_title do %>
  <%= @vendor.name %> - <%= @product.name %>
<% end %>

<%= content_for :page_bar do %>
  <ul class="page-breadcrumb">
    <li>
      <%= link_to "Home", manage_path %>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      <%= link_to "Products", manage_products_path %>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      <%= link_to @product.name, edit_manage_product_path(@product) %>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      <span>Variants</span>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      <span class="font-blue-madison bold uppercase">
        <%= @variant.full_context %>
      </span>
    </li>
  </ul>

  <div class="page-toolbar">
    <div class="pull-right">
      <%= link_to "Back to Product", edit_manage_product_path(@product), class: 'btn btn-success' %>
    </div>
  </div>

<% end %>
