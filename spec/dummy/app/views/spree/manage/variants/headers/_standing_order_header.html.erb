<%= content_for :head_title do %>
  Standing Order: <%= @current_order.name %> - <%= @vendor.name %>: <%= @product.name %>
<% end %>

<%= content_for :page_bar do %>
  <ul class="page-breadcrumb">
    <li>
      <%= link_to "Home", manage_path %>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      <%= link_to "Orders", manage_orders_path %>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      <%= link_to "Standing Orders", manage_standing_orders_path %>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      <%= link_to @current_order.name, edit_manage_standing_order_path(@current_order) %>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      <%= link_to "Products", manage_standing_order_products_path(@current_order) %>
      <i class="fa fa-circle"></i>
    </li>
    <li>
      <span><%= @product.name %></span>
    </li>
  </ul>

  <div class="page-toolbar">
    <div class="pull-right">
      <%= link_to "Back to Catalog", manage_standing_order_products_path(@current_order), class: 'btn btn-sm btn-success' %>
      <button type="button" class="btn btn-success btn-sm dropdown-toggle" data-toggle="dropdown"> Actions
        <i class="fa fa-angle-down"></i>
      </button>
      <ul class="dropdown-menu pull-right" role="menu">
        <li>
          <%= link_to "Edit Product", edit_manage_product_path(@product) %>
        </li>
        <li>
          <%= link_to "Edit Images", manage_product_images_path(@product) %>
        </li>
      </ul>
    </div>
  </div>

<% end %>
