<div class="row" data-hook="manage_page_form_fields">
  <div class="col-md-6" data-hook="manage_page_form_left">
    <div class="form-group">
      <%= f.label :title %> <span class="required">*</span>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :slug %> <span class="required">*</span>
      <%= f.text_field :slug, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :body %> <span class="required">*</span>
      <%= f.cktext_area :body, input_html: { rows: 10, ckeditor: { toolbar: 'Full' }} %>
    </div>
  </div>

  <div class="col-md-6" data-hook="manage_page_form_right">
    <div class="form-group">
      <%= f.label :foreign_link %>
      <%= f.text_field :foreign_link, class: 'form-control' %>
    </div>

    <div class="checkbox">
      <%= f.label 'Show in header', class: "control-label" %>
      <%= f.check_box :show_in_header, class: 'make-switch', 'data-size' => 'mini' %>
    </div>

    <div class="checkbox">
      <%= f.label 'Show in footer', class: "control-label" %>
      <%= f.check_box :show_in_footer, class: 'make-switch', 'data-size' => 'mini' %>
    </div>

    <div class="checkbox">
      <%= f.label 'Visible', class: "control-label" %>
      <%= f.check_box :visible, class: 'make-switch', 'data-size' => 'mini' %>
    </div>

    <div class="form-group hidden">
      <%= f.label :stores, plural_resource_name(Spree::Store) %>
      <% Spree::Store.all.each do |store| %>
        <div class="checkbox">
          <%= f.label store.name.downcase.to_sym, class: "control-label" %>
          <%= check_box_tag 'page[store_ids][]', store.id, @page.stores.include?(store), class: 'make-switch', 'data-size' => 'mini' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row" data-hook="manage_page_form_additional_fields">
  <div class="col-md-12"></div>
</div>
