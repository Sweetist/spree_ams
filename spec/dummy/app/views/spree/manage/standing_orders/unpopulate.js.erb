<% if flash[:error] %>
  $('#alert').html("<div class='alert alert-danger alert-dismissable'><button type='button' class='close' data-dismiss='alert' aria-hidden='true'></button><%= flash[:error] %></div>");
<% elsif @line_item && @order %>
  $("#line_item_<%= @line_item.id %>").remove();
  $("#standing_order_standing_line_items_attributes_<%= params[:item_form_idx] %>_id").remove();
  $('#subtotals-row').replaceWith("<%= escape_javascript(render(partial: 'subtotal_row.html.erb', locals: {order_total: @order_total})) %>");
<% end %>
