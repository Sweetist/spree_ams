<div class='form-container one-column-form'>
  <%= form_for :spree_user, url: reset_password_path, class: "forget-form", html: {class: "prevent-double-submission"} do |f| %>
    <h3 class="font-green">Forget Password ?</h3>
    <p> Enter your e-mail address below to reset your password. </p>
    <% if flash[:error] %>
      <div class="alert alert-danger alert-dismissable">
        <button type='button' class='close' data-dismiss='alert' aria-hidden='true'></button>
        <span><%= flash[:error] %></span>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.text_field :email, value: params[:spree_user].try(:[], :email), class: "form-control placeholder-no-fix", type: "email", autocomplete: "off", placeholder: "Email" %>
    </div>
    <div class="form-actions">
      <%= link_to "Back", root_path, class: "btn btn-default", id: "back-btn"%>
      <%= f.submit "Reset my password", class: "btn btn-success uppercase pull-right"%>
    </div>
  <% end %>
</div>
