<%= content_for :head_title do %>
  <%= @account.name %>
<% end %>

<%= content_for :page_title do %>
<%= @account.name %>
<% end %>

<%= content_for :page_bar do %>
  <ul class="breadcrumb">
    <li>
      <%= link_to "Home", root_path %>
    </li>
    <li>
      <%= link_to "Account", edit_my_company_user_path(current_spree_user) %>
    </li>
    <li>
      <%= link_to "Images", my_company_company_images_path %>
    </li>
    <li>
      New
    </li>
  </ul>

  <div class="page-toolbar">
    <div class="btn-group pull-right">
      <%= link_to "Back to Images",  my_company_company_images_path, class: "btn btn-success btn-sm" %>
    </div>
  </div>

<% end %>

<div class="portlet box blue-hoki">

  <div class="portlet-title">
    <div class="caption">
      Upload New Image
    </div>
  </div>

  <div class="portlet-body form">
    <%= form_for [:cust, @account, @account_image], url: my_company_company_images_url, html: { multipart: true } do |f| %>
      <div class="form-body">
        <%= render partial: 'form', locals: { f: f } %>
      </div>

      <div class="form-actions right">
        <%= button_link_to Spree.t('actions.cancel'), spree.my_company_company_images_url, icon: 'delete', id: 'cancel_link' %>
        <%= button Spree.t('actions.update'), 'save', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
