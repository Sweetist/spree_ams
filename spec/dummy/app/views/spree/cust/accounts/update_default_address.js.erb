<% if flash[:errors] %>

  $("#alert").html("<%= escape_javascript(render(partial: 'spree/shared/errors')) %>");

<% else %>
  $('#alert').html("<div class='alert alert-success alert-auto-dissapear'><%= flash[:success] %></div>");
  $('#address-select-modal').modal('hide');

  $("div#addresses").html("<%= escape_javascript(render(partial: 'spree/cust/accounts/addresses')) %>");
  $('#account-address-info').replaceWith("<%= escape_javascript(render(partial: 'spree/cust/orders/new_order_addresses')) %>");

  setTimeout(function() {
   $(".alert-auto-dissapear").fadeOut(1500);
  },2000);

<% end %>
