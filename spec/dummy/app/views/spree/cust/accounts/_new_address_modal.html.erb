<%= form_for @address, url: account_addresses_path(account_id: @account.id), method: :post, remote: true do |f| %>
  <div class="modal-dialog">
    <div id="address_form" class="modal-content">
      <div class="modal-header">
        <div class='alert-address-modal'></div>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <span class="caption-subject font-blue-madison bold uppercase">New Address</span>
      </div>
      <div id="address_form" class="modal-body">
        <%= render partial: "/spree/shared/forms/address_form", locals: {f: f} %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          <i class='fa fa-times'></i> Cancel
        </button>
        <%= f.submit "Save Address", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
