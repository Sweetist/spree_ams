<%= content_for :head_title do %>
  <%= @user.name %>
<% end %>

<%= content_for :page_title do %>
<%= @user.name %>
<% end %>

<%= content_for :page_bar do %>
  <ul class="breadcrumb">
    <li>
      <%= link_to "Home", root_path %>
    </li>
    <li>
      New
    </li>
  </ul>

  <div class="page-toolbar">
    <div class="btn-group pull-right">
      <%#= link_to "Back to Product",  edit_manage_product_url(@product), class: "btn btn-success btn-sm" %>
    </div>
  </div>
  <div class="clearfix"></div>
<% end %>

<div class="portlet box blue-hoki">

  <div class="portlet-title">
    <div class="caption">
      Upload New Image
    </div>
  </div>

  <div class="portlet-body form">
    <%= form_for [:cust, @user, @user_image], url: my_profile_user_images_url, html: { multipart: true } do |f| %>
      <div class="form-body">
        <%= render partial: 'form', locals: { f: f } %>
      </div>

      <div class="form-actions right">
        <%= button_link_to Spree.t('actions.cancel'), my_profile_user_images_url, icon: 'delete', id: 'cancel_link', class: "btn btn-default" %>
        <%= button Spree.t('actions.update'), 'save', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
