<ul class="breadcrumb">
  <li>
    <%= link_to "Home", root_path %>
  </li>
  <li>
    <%= link_to "Orders", orders_path %>
  </li>
  <li>
    <span><%= @order.display_number %></span>
  </li>
</ul>

<% if false %>
  <div class="page-toolbar">
    <div class="btn-group pull-right">
    <%= link_to order_generate_path(@order), class: 'btn green-jungle margin-right-10' do %>
      <i class="fa fa-plus"></i>&nbsp;New Order From This Order
    <% end %>
      <button type="button" class="btn green dropdown-toggle" data-toggle="dropdown"> Actions
        <i class="fa fa-angle-down"></i>
      </button>
      <ul class="dropdown-menu pull-right" role="menu">
        <li>
          <%= link_to "Back to All Orders", orders_path %>
        </li>
        <% if @order.invoice && @order.vendor.try(:use_separate_invoices) %>
          <li>
            <%= link_to "View Invoice", invoice_path(@order.invoice_id) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
