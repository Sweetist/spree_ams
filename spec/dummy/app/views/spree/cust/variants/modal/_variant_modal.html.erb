<div class="modal fade bs-modal-lg" id="variant-modal" tabindex="-1">
  <div class="modal-dialog modal-lg">

    <div class="modal-content">
      <div id='modal-errors'></div>
      <div class="portlet light" style='margin-bottom:0px;'>
        <%= render partial: 'spree/cust/variants/modal/default_content' %>
      </div>

    </div>
  </div>
</div>

<script type='text/javascript'>
  $('#variant-modal').on('hidden.bs.modal', function(){
    $('.portlet', '#variant-modal').empty();
    $('.portlet', '#variant-modal').append("<%= j(render(partial: 'spree/cust/variants/modal/default_content.html.erb')) %>");
  });
</script>
